# Matplotlib Style Configuration

# MARK: Font

font.family: serif
font.serif: Times New Roman
font.size: 10
axes.labelsize: 10
axes.titlesize: 10
legend.fontsize: 10

# MARK: Figure

figure.figsize: 4.0, 2.64
figure.dpi: 300

# MARK: Axes

axes.prop_cycle: cycler('color', ['00b600', '004b96', '4391d1', 'ff2020', '4c20b4'])

# MARK: Images

image.cmap: nlolib_hdr

# MARK: Saving Figures

savefig.dpi: 300
savefig.bbox: tight
